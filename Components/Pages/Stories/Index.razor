@page "/stories"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using mass.Data

@attribute [Authorize]

@inject MassDbContext DbContext
@inject UserManager<MassIdentityUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject ILogger<Index> Logger

<PageTitle>My Stories</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>My Stories</h1>
    <a class="btn btn-primary" href="/stories/create">Create new story</a>
</div>

@if (!string.IsNullOrEmpty(message))
{
    <div class="alert alert-info mt-3">@message</div>
}

<div class="mb-3">
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="includeArchived" @bind:after="OnIncludeArchivedChanged" @bind="IncludeArchived" />
        <label class="form-check-label" for="includeArchived">
            Include archived stories
        </label>
    </div>
</div>

@if (Stories is null)
{
    <p><em>Loading...</em></p>
}
else if (!Stories.Any())
{
    <div class="alert alert-info">You are not contributing to any stories yet.</div>
}
else
{
    <div class="row">
        @foreach (var story in Stories)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <h5 class="card-title mb-0">@story.Title</h5>
                            @if (story.IsArchived)
                            {
                                <span class="badge bg-secondary">Archived</span>
                            }
                            @if (story.IsLocked && story.LockedBy is not null)
                            {
                                <span class="badge bg-warning">Locked by: @story.LockedBy</span>
                            }
                            @if (story.HasNewEntries)
                            {
                                <span class="badge bg-success">New Entries!</span>
                            }
                        </div>
                        <p class="card-text">@story.Description</p>
                        <div class="mt-auto">
                            <div class="mb-2">
                                <small class="text-muted">By @story.CreatedBy</small>
                                @if (story.Contributors.Any())
                                {
                                    <div class="text-muted" style="font-size: 0.875rem;">
                                        Contributors: @string.Join(", ", story.Contributors)
                                    </div>
                                }
                                else
                                {
                                    <div class="text-muted" style="font-size: 0.875rem;">
                                        Contributors: None
                                    </div>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-muted">Last modified: @story.LastModifiedAt.ToLocalTime().ToString("g")</small>
                                <div>
                                    <a class="btn btn-sm btn-outline-primary me-2" href="/stories/edit/@story.Id"><span class="bi bi-pencil-fill" aria-hidden="true"></span> Edit</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<StoryWithNewEntries>? Stories;
    private string? message;
    private bool IncludeArchived = false;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);
        if (user is not null)
        {
            currentUserId = user.Id;
        }
        await LoadStories();
    }

    private async Task OnIncludeArchivedChanged()
    {
        await LoadStories();
    }

    private async Task LoadStories()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user is null)
        {
            message = "Error: unable to load current user.";
            return;
        }

        try
        {
            var userId = user.Id;

            var query = DbContext.Stories
                .Include(s => s.CreatedBy)
                .Include(s => s.Contributors)
                .Include(s => s.LockedBy)
                .Include(s => s.Chapters).ThenInclude(c => c.Entries).ThenInclude(e => e.CreatedBy)
                .Where(s => s.CreatedBy.Id == userId || s.Contributors.Any(c => c.Id == userId));

            if (!IncludeArchived)
            {
                query = query.Where(s => !s.IsArchived);
            }

            var storiesWithNewEntries = await query
                .OrderByDescending(s => s.LastModifiedAt)
                .AsNoTracking()
                .Select(s => new StoryWithNewEntries
                {
                    Id = s.Id,
                    Title = s.Title,
                    Description = s.Description,
                    IsArchived = s.IsArchived,
                    IsLocked = s.IsLocked,
                    LastModifiedAt = s.LastModifiedAt,
                    CreatedBy = s.CreatedBy.UserName ?? "",
                    LockedBy = s.LockedBy != null ? s.LockedBy.UserName : null,
                    Contributors = s.Contributors.Select(c => c.UserName ?? "").ToList(),
                    HasNewEntries = s.Chapters.SelectMany(c => c.Entries)
                        .Where(e => e.CreatedBy.Id == userId)
                        .Max(e => (DateTimeOffset?)e.CreatedAt) != null &&
                        s.Chapters.SelectMany(c => c.Entries)
                            .Any(e => e.CreatedAt > s.Chapters.SelectMany(c => c.Entries)
                                .Where(e2 => e2.CreatedBy.Id == userId)
                                .Max(e2 => (DateTimeOffset?)e2.CreatedAt) &&
                                e.CreatedBy.Id != userId)
                })
                .ToListAsync();

            Stories = storiesWithNewEntries;
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading stories for user {UserId}", user.Id);
            message = "Error loading your stories.";
        }
    }


}