@page "/stories"

@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.EntityFrameworkCore
@using mass.Data

@attribute [Authorize]

@inject MassDbContext DbContext
@inject UserManager<MassIdentityUser> UserManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject NavigationManager NavigationManager
@inject ILogger<Index> Logger

<PageTitle>My Stories</PageTitle>

<h1>My Stories</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/stories/create">Create new story</a>
</div>

@if (Stories is null)
{
    <p><em>Loading...</em></p>
}
else if (!Stories.Any())
{
    <div class="alert alert-info">You are not contributing to any stories yet.</div>
}
else
{
    <div class="row">
        @foreach (var story in Stories)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@story.Title</h5>
                        <p class="card-text">@story.Description</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <small class="text-muted">By @story.CreatedBy.UserName</small>
                            <small class="text-muted">Last modified: @story.LastModifiedAt.ToLocalTime().ToString("g")</small>
                            <div>
                                <a class="btn btn-sm btn-outline-primary me-2" href="/stories/edit/@story.Id"><span class="bi bi-pencil-fill" aria-hidden="true"></span> Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Story>? Stories;
    private string? message;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        var user = await UserManager.GetUserAsync(authState.User);

        if (user is null)
        {
            message = "Error: unable to load current user.";
            return;
        }

        try
        {
            var userId = user.Id;

            Stories = await DbContext.Stories
                .Include(s => s.CreatedBy)
                //.Include(s => s.Contributors)
                .Where(s => (s.CreatedBy.Id == userId || s.Contributors.Any(c => c.Id == userId)) && !s.IsArchived)
                .OrderByDescending(s => s.LastModifiedAt)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading stories for user {UserId}", user.Id);
            message = "Error loading your stories.";
        }
    }
}