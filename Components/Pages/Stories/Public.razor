@page "/stories/public"

@using Microsoft.EntityFrameworkCore
@using mass.Data
@inject MassDbContext DbContext
@inject ILogger<Public> Logger

<PageTitle>Public Stories</PageTitle>

<h1>Public Stories</h1>

@if (Stories is null)
{
    <p><em>Loading...</em></p>
}
else if (!Stories.Any())
{
    <div class="alert alert-info">No public stories yet.</div>
}
else
{
    <div class="row">
        @foreach (var story in Stories)
        {
            <div class="col-md-6 mb-3">
                <div class="card h-100">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@story.Title</h5>
                        <p class="card-text">@story.Description</p>
                        <div class="mt-auto d-flex justify-content-between align-items-center">
                            <small class="text-muted">By @story.CreatedBy.UserName</small>
                            <small class="text-muted">Last modified: @story.LastModifiedAt.ToLocalTime().ToString("g")</small>
                            <div>
                                <a class="btn btn-sm btn-primary" href="/stories/read/@story.Id"><span class="bi bi-book-fill" aria-hidden="true"></span> Read</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Story>? Stories;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Stories = await DbContext.Stories
                .Include(s => s.CreatedBy)
                .Where(s => s.IsPublic)
                .OrderByDescending(s => s.LastModifiedAt)
                .AsNoTracking()
                .ToListAsync();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading public stories");
        }
    }
}
