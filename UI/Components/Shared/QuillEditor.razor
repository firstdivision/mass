@using Microsoft.AspNetCore.Components.Forms
@implements IAsyncDisposable

<div @ref="editorContainer" id="@EditorId" class="quill-editor-container"></div>
@if (ShowButtons)
{
    <div class="quill-editor-buttons mt-2">
        <button type="button" class="btn btn-sm btn-primary" @onclick="HandleSave" disabled="@IsSaving">Save</button>
        @if (ShowCancelButton)
        {
            <button type="button" class="btn btn-sm btn-secondary ms-2" @onclick="HandleCancel">Cancel</button>
        }
    </div>
}

@code {
    [Parameter]
    public string EditorId { get; set; } = "quill-editor-" + Guid.NewGuid().ToString("N");

    [Parameter]
    public string Content { get; set; } = "";

    [Parameter]
    public EventCallback<string> ContentChanged { get; set; }

    [Parameter]
    public string Placeholder { get; set; } = "Enter content...";

    [Parameter]
    public bool ShowButtons { get; set; } = false;

    [Parameter]
    public bool ShowCancelButton { get; set; } = true;

    [Parameter]
    public EventCallback OnSave { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    [Parameter]
    public bool IsSaving { get; set; } = false;

    private ElementReference editorContainer;
    private IJSObjectReference? module;
    private string? previousContent;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                module = await JS.InvokeAsync<IJSObjectReference>("import", "./Components/Shared/QuillEditor.razor.js");
                if (module != null)
                {
                    await module.InvokeVoidAsync("initializeQuill", EditorId, Content, Placeholder);
                    previousContent = Content;
                }
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error initializing Quill editor: {ex.Message}");
            }
        }
        else if (Content != previousContent && module != null)
        {
            // Content changed from parent, update the editor
            await module.InvokeVoidAsync("setQuillContent", EditorId, Content);
            previousContent = Content;
        }
    }

    public async Task<string> GetContent()
    {
        if (module != null)
        {
            return await module.InvokeAsync<string>("getQuillContent", EditorId);
        }
        return Content;
    }

    public async Task SetContent(string content)
    {
        Content = content;
        if (module != null)
        {
            await module.InvokeVoidAsync("setQuillContent", EditorId, content);
        }
    }

    public async Task NotifyContentChanged()
    {
        var newContent = await GetContent();
        if (newContent != Content)
        {
            Content = newContent;
            await ContentChanged.InvokeAsync(Content);
        }
    }

    private async Task HandleSave()
    {
        // Update content before invoking save callback
        Content = await GetContent();
        await OnSave.InvokeAsync();
    }

    private async Task HandleCancel()
    {
        await OnCancel.InvokeAsync();
    }

    async ValueTask IAsyncDisposable.DisposeAsync()
    {
        if (module is not null)
        {
            try
            {
                await module.InvokeVoidAsync("disposeQuill", EditorId);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error disposing Quill editor: {ex.Message}");
            }
        }
    }

    [Inject]
    private IJSRuntime JS { get; set; } = null!;
}
